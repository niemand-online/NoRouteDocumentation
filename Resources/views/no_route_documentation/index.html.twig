<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>niemand.online/NoRouteDocumentation</title>
    <script src="https://unpkg.com/vue@2.5.2/dist/vue.js" type="application/javascript"></script>
    <script src="https://cdn.jsdelivr.net/npm/axios@0.16.2/dist/axios.min.js" type="application/javascript"></script>
</head>
<body>
<div id="app"></div>
<script>{% verbatim %}
    const method = Vue.component('method', {
        template: `<div><div>{{ route.seo }}</div><div>{{ route.httpMethod }}</div><div>{{ route.fullPath }}</div><div>{{ route.controllerClassName }}<span v-if="route.controllerServiceId">({{route.controllerServiceId}})</span></div><div>{{route.methodName}}</div></div>`,
        props: ['route']
    });

    const $vue = new Vue({
        el: '#app',
        components: { method },
        template: '<div><method v-for="routeItem in routes" v-bind:route="routeItem"></method></div>',
        data: () => ({
            routes: [],
            loading: true
        }),
        created() {
            axios.get('/api/no_route.json')
                .then(response => this.routes = response.data.data.slice())
                .then(() => this.loading = false);
        }
    });
{% endverbatim %}</script>
</body>
</html>
